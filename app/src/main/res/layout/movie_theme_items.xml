<?xml version="1.0" encoding="utf-8"?>
<com.creativetechnologies.slideshows.videos.songs.videomaker.view.ScaleCardLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    app:aspectRatioHeight="1"
    app:aspectRatioWidth="1"
    app:cardBackgroundColor="@color/m_black_less_than_40_opacity"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp">

    <ImageView
        android:id="@+id/ivThumb"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:background="@drawable/bg_card_transparent"
        android:clickable="true"
        android:scaleType="centerCrop" />

    <CheckBox
        android:id="@+id/cbSelect"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_alignTop="@+id/imageView1"
        android:background="@drawable/folder_selection"
        android:button="@drawable/below_shadow"
        android:checked="true" />

    <View
        android:id="@+id/clickableView"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:background="@drawable/bg_card_transparent"
        android:clickable="true" />

    <TextView
        android:id="@+id/tvThemeName"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivThumb"
        android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
        android:background="#40000000"
        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:maxLines="1"
        android:singleLine="true"
        android:visibility="gone"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" />
</com.creativetechnologies.slideshows.videos.songs.videomaker.view.ScaleCardLayout>
